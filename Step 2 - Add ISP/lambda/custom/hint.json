{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [],
    "resources": [
        {
            "description": "Colors dark to light",
            "colors": {
                "myBlack": "#343838",
                "myPurple": "#9C0A54",
                "myRed": "#FC2D47",
                "myOrange": "#FD704B",
                "myYellow": "#FDB04F",
                "myWhite": "#FFFFFF"
            }
        }
    ],
    "styles": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "width": "100vw",
                "height": "100vh",
                "items": [
                    {
                        "type": "Frame",
                        "width": "100vw",
                        "height": "100vh",
                        "backgroundColor": "@myBlack",
                        "position": "absolute"
                    },
                    {
                        "type": "Text",
                        "text": "${payload.riddleGameData.properties.currentLevel}",
                        "width": "100vw",
                        "color": "@myWhite",
                        "fontWeight": "900",
                        "fontSize": "5vw",
                        "paddingTop": "5vh",
                        "textAlign": "center"
                    },
                    {
                        "type": "Text",
                        "text": "Riddle ${payload.riddleGameData.properties.currentQuestionNumber} Hint:",
                        "width": "100vw",
                        "color": "@myWhite",
                        "fontWeight": "300",
                        "fontSize": "8vw",
                        "textAlign": "center"
                    },
                    {
                        "type": "Text",
                        "text": "${payload.riddleGameData.properties.currentHintSsml}",
                        "width": "100vw",
                        "color": "@myWhite",
                        "fontWeight": "300",
                        "fontSize": "5vw",
                        "paddingTop": "5vh",
                        "paddingLeft": "5vh",
                        "paddingRight": "5vh",
                        "textAlign": "center"
                    },
                    {
                        "when": "${payload.riddleGameData.properties.currentLevel == 'Easy'}",
                        "type": "Frame",
                        "width": "100vw",
                        "height": "20vh",
                        "backgroundColor": "@myYellow",
                        "position": "absolute",
                        "top": "80vh"
                    },
                    {
                        "when": "${payload.riddleGameData.properties.currentLevel == 'Medium'}",
                        "type": "Frame",
                        "width": "100vw",
                        "height": "20vh",
                        "backgroundColor": "@myOrange",
                        "position": "absolute",
                        "top": "80vh"
                    },
                    {
                        "when": "${payload.riddleGameData.properties.currentLevel == 'Hard'}",
                        "type": "Frame",
                        "width": "100vw",
                        "height": "20vh",
                        "backgroundColor": "@myRed",
                        "position": "absolute",
                        "top": "80vh"
                    },
                    {
                        "type": "Text",
                        "text": "Score: ${payload.riddleGameData.properties.numCorrect} correct",
                        "width": "100vw",
                        "fontWeight": "900",
                        "fontSize": "5vw",
                        "textAlign": "center",
                        "position": "absolute",
                        "top": "85vh"
                    }
                ]
            }
        ]
    }
}